<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================= -->
    <!-- VISTAS DE DENOMINACIONES          -->
    <!-- ================================= -->

    <!-- Vista Tree de Denominaciones -->
    <record id="view_cash_denomination_tree" model="ir.ui.view">
        <field name="name">cash.denomination.tree</field>
        <field name="model">cash.denomination</field>
        <field name="arch" type="xml">
            <tree string="Denominaciones">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="value"/>
                <field name="currency_id"/>
                <field name="denomination_type" widget="badge"
                       decoration-info="denomination_type == 'bill'"
                       decoration-warning="denomination_type == 'coin'"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Denominaciones -->
    <record id="view_cash_denomination_form" model="ir.ui.view">
        <field name="name">cash.denomination.form</field>
        <field name="model">cash.denomination</field>
        <field name="arch" type="xml">
            <form string="Denominación">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="value"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="denomination_type" widget="radio"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search de Denominaciones -->
    <record id="view_cash_denomination_search" model="ir.ui.view">
        <field name="name">cash.denomination.search</field>
        <field name="model">cash.denomination</field>
        <field name="arch" type="xml">
            <search string="Buscar Denominaciones">
                <field name="name"/>
                <field name="currency_id"/>
                <separator/>
                <filter string="Billetes" name="filter_bills" 
                        domain="[('denomination_type', '=', 'bill')]"/>
                <filter string="Monedas" name="filter_coins" 
                        domain="[('denomination_type', '=', 'coin')]"/>
                <separator/>
                <filter string="Activos" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="filter_inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Moneda" name="group_by_currency" 
                            context="{'group_by': 'currency_id'}"/>
                    <filter string="Tipo" name="group_by_type" 
                            context="{'group_by': 'denomination_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Denominaciones -->
    <record id="action_cash_denomination" model="ir.actions.act_window">
        <field name="name">Denominaciones</field>
        <field name="res_model">cash.denomination</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_cash_denomination_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear su primera denominación
            </p>
            <p>
                Configure las denominaciones de billetes y monedas para cada moneda utilizada.
            </p>
        </field>
    </record>
</odoo>
