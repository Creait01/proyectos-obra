<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de cuenta contable para agregar los campos de cierre de caja -->
    <record id="view_account_form_inherit_cash" model="ir.ui.view">
        <field name="name">account.account.form.inherit.cash</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="is_cash_account" widget="boolean_toggle" 
                       string="Cuenta de Efectivo"
                       help="Marcar si esta cuenta se usa para el cierre de caja diario"/>
                <field name="is_bank_account" widget="boolean_toggle" 
                       string="Cuenta Bancaria"
                       help="Marcar si esta cuenta es una cuenta bancaria para el cierre de caja"/>
                <field name="cash_close_currency_id" 
                       string="Moneda Cierre Caja"
                       attrs="{'invisible': [('is_cash_account', '=', False)], 'required': [('is_cash_account', '=', True)]}"
                       options="{'no_create': True, 'no_open': True}"
                       help="Moneda específica para el cierre de caja. Seleccione USD para usar debit_usd/credit_usd, o VES/Bs para usar debit/credit estándar. Este campo es INDEPENDIENTE de la moneda contable."/>
            </field>
        </field>
    </record>

    <!-- Heredar vista tree de cuenta contable -->
    <record id="view_account_list_inherit_cash" model="ir.ui.view">
        <field name="name">account.account.tree.inherit.cash</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_cash_account" widget="boolean_toggle" optional="show" string="Cuenta Efectivo"/>
                <field name="is_bank_account" widget="boolean_toggle" optional="show" string="Cuenta Bancaria"/>
                <field name="cash_close_currency_id" string="Moneda Cierre" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Filtro para cuentas de efectivo -->
    <record id="view_account_search_inherit_cash" model="ir.ui.view">
        <field name="name">account.account.search.inherit.cash</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Cuentas de Efectivo" name="cash_accounts" 
                        domain="[('is_cash_account', '=', True)]"/>
                <filter string="Cuentas Bancarias" name="bank_accounts" 
                        domain="[('is_bank_account', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
