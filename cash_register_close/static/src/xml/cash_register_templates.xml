<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Template principal del Dashboard -->
    <t t-name="cash_register_close.CashRegisterDashboard" owl="1">
        <div class="cash-register-dashboard-container p-4">
            <!-- Loading State -->
            <div t-if="state.isLoading" class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-3 text-muted">Cargando datos del dashboard...</p>
            </div>

            <!-- Dashboard Content -->
            <div t-else="">
                <!-- Header -->
                <div class="dashboard-header mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h2 class="mb-0" style="font-weight: 700; color: #2c3e50;">
                                <i class="fa fa-cash-register me-2"></i>
                                Dashboard de Cierre de Caja
                            </h2>
                            <p class="text-muted mb-0">Resumen del estado actual de cajas</p>
                        </div>
                        <div class="col-md-6 text-end">
                            <button class="btn btn-primary me-2" t-on-click="openNewClose">
                                <i class="fa fa-plus me-1"></i> Nuevo Cierre
                            </button>
                            <button class="btn btn-success" t-on-click="openMassClose">
                                <i class="fa fa-magic me-1"></i> Cierre Masivo
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row g-4 mb-4">
                    <!-- Cierres de Hoy -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm stat-card" 
                             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"
                             t-on-click="openTodayCloses">
                            <div class="card-body text-white">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="mb-1 opacity-75">Cierres de Hoy</p>
                                        <h2 class="mb-0 cash-animate-number" t-att-data-target="state.todayCloses">
                                            <t t-esc="state.todayCloses"/>
                                        </h2>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-calendar-check fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cierres Pendientes -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm stat-card"
                             style="background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);"
                             t-on-click="openPendingCloses">
                            <div class="card-body text-dark">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="mb-1 opacity-75">Pendientes</p>
                                        <h2 class="mb-0">
                                            <t t-esc="state.pendingCloses"/>
                                        </h2>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-clock fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Balance Total -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm stat-card"
                             style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                            <div class="card-body text-white">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="mb-1 opacity-75">Balance Total Hoy</p>
                                        <h2 class="mb-0 cash-animate-number" t-att-data-target="state.totalBalance">
                                            <t t-esc="formatCurrency(state.totalBalance)"/>
                                        </h2>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-wallet fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Diferencia -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm stat-card"
                             t-att-style="'background: ' + (state.totalDifference === 0 ? 'linear-gradient(135deg, #17a2b8 0%, #3498db 100%)' : (state.totalDifference &lt; 0 ? 'linear-gradient(135deg, #dc3545 0%, #c0392b 100%)' : 'linear-gradient(135deg, #ffc107 0%, #f39c12 100%)'))">
                            <div class="card-body text-white">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="mb-1 opacity-75">Diferencia Total</p>
                                        <h2 class="mb-0">
                                            <i t-att-class="'fa me-1 ' + getDifferenceIcon(state.totalDifference)"></i>
                                            <t t-esc="formatCurrency(state.totalDifference)"/>
                                        </h2>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-balance-scale fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cuentas de Efectivo Configuradas -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0">
                                    <i class="fa fa-coins me-2 text-primary"></i>
                                    Cuentas de Efectivo Configuradas
                                </h5>
                            </div>
                            <div class="card-body">
                                <div t-if="state.cashAccounts.length === 0" class="text-center py-4">
                                    <i class="fa fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                                    <p class="text-muted">No hay cuentas de efectivo configuradas.</p>
                                    <p class="text-muted small">Vaya a Plan Contable y marque las cuentas como "Cuenta de Efectivo".</p>
                                </div>
                                <div t-else="" class="row g-3">
                                    <div t-foreach="state.cashAccounts" t-as="account" t-key="account.id" class="col-md-4 col-lg-3">
                                        <div class="p-3 rounded" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fa fa-university"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <strong><t t-esc="account.code"/></strong>
                                                    <p class="mb-0 small text-muted"><t t-esc="account.name"/></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Acciones R치pidas -->
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0">
                                    <i class="fa fa-bolt me-2 text-warning"></i>
                                    Acciones R치pidas
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <button class="btn btn-outline-primary w-100 py-3" t-on-click="openNewClose">
                                            <i class="fa fa-plus fa-lg mb-2 d-block"></i>
                                            Nuevo Cierre
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-outline-success w-100 py-3" t-on-click="openMassClose">
                                            <i class="fa fa-magic fa-lg mb-2 d-block"></i>
                                            Cierre Masivo
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-outline-warning w-100 py-3" t-on-click="openPendingCloses">
                                            <i class="fa fa-clock fa-lg mb-2 d-block"></i>
                                            Ver Pendientes
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-outline-info w-100 py-3" t-on-click="openTodayCloses">
                                            <i class="fa fa-calendar-day fa-lg mb-2 d-block"></i>
                                            Cierres de Hoy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>
            .stat-card {
                cursor: pointer;
                transition: all 0.3s ease;
                border-radius: 15px !important;
            }
            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.15) !important;
            }
            .stat-icon {
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
            }
            .card {
                border-radius: 15px !important;
            }
            .card-header {
                border-radius: 15px 15px 0 0 !important;
            }
        </style>
    </t>

    <!-- Template del Contador de Denominaciones -->
    <t t-name="cash_register_close.CashDenominationCounter" owl="1">
        <div class="denomination-counter p-3">
            <h5 class="mb-3">
                <i class="fa fa-calculator me-2"></i>
                Conteo de Denominaciones
            </h5>
            
            <div t-foreach="state.denominations" t-as="denom" t-key="denom.id" 
                 class="denomination-row d-flex align-items-center mb-2 p-2 rounded"
                 style="background: #f8f9fa;">
                <div class="flex-grow-1">
                    <strong><t t-esc="denom.name"/></strong>
                    <small class="text-muted ms-2">(<t t-esc="formatCurrency(denom.value)"/>)</small>
                </div>
                <div class="d-flex align-items-center">
                    <button class="btn btn-sm btn-outline-secondary" 
                            t-on-click="() => updateQuantity(denom_index, -1)">
                        <i class="fa fa-minus"></i>
                    </button>
                    <input type="number" class="form-control form-control-sm mx-2 text-center" 
                           style="width: 80px;"
                           t-att-value="denom.quantity || 0"
                           t-on-change="(e) => setQuantity(denom_index, e.target.value)"/>
                    <button class="btn btn-sm btn-outline-primary"
                            t-on-click="() => updateQuantity(denom_index, 1)">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
                <div class="ms-3 text-end" style="min-width: 100px;">
                    <strong><t t-esc="formatCurrency((denom.value || 0) * (denom.quantity || 0))"/></strong>
                </div>
            </div>

            <div class="total-row mt-3 p-3 rounded" 
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="d-flex justify-content-between align-items-center text-white">
                    <h5 class="mb-0">TOTAL CONTADO:</h5>
                    <h3 class="mb-0"><t t-esc="formatCurrency(state.total)"/></h3>
                </div>
            </div>
        </div>
    </t>

    <!-- Template de Acciones R치pidas -->
    <t t-name="cash_register_close.CashRegisterQuickActions" owl="1">
        <div class="quick-actions-widget p-3">
            <div class="row g-2">
                <div class="col-6">
                    <button class="btn btn-primary w-100" t-on-click="quickClose">
                        <i class="fa fa-magic me-1"></i>
                        Cierre R치pido
                    </button>
                </div>
                <div class="col-6">
                    <button class="btn btn-info w-100" t-on-click="viewReports">
                        <i class="fa fa-chart-bar me-1"></i>
                        Reportes
                    </button>
                </div>
                <div class="col-12 mt-2">
                    <button class="btn btn-outline-secondary w-100" t-on-click="configDenominations">
                        <i class="fa fa-cog me-1"></i>
                        Configurar Denominaciones
                    </button>
                </div>
            </div>
        </div>
    </t>

</templates>
